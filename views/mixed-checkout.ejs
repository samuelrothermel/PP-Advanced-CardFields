<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/styles/custom.css" />
    <title>Mixed Checkout - One-Time & Recurring</title>
  </head>

  <body>
    <div class="container">
      <section>
        <div class="or-text">Mixed Checkout - One-Time & Recurring</div>
        <div class="separator"></div>
        <div class="order-details">
          <h3>Order Details:</h3>
          <ul>
            <li><strong>Mittens Product:</strong> $24.99</li>
            <li><strong>Subscription:</strong> $3.99/month</li>
            <li><strong>Shipping:</strong> Free</li>
            <li><strong>Total:</strong> $28.98</li>
          </ul>
        </div>
        <div class="separator"></div>
        <label for="toggle-customer-id">Returning User?</label>
        <input type="checkbox" id="toggle-customer-id" />
        <form id="customer-id-form" style="display: none;">
          <label for="customer-id">Enter PayPal Vault v3 Customer ID:</label>
          <input type="text" id="customer-id" name="customer-id" required />
          <button type="submit">Submit</button>
        </form>
        <div id="order-info-section" style="display: none;">
            <div class="separator"></div>
          <div id="create-order-info"></div>
        </div>
        <div id="capture-info-section" style="display: none;">
            <div class="separator"></div>
          <div id="capture-order-info"></div>
        </div>
        <div id="payment-source-section" style="display: none;">
            <div class="separator"></div>
            <div id="payment-source-type-info"></div>
          <div id="vault-payment-info"></div>
          <div id="vault-status-info"></div>
          <div id="customer-id-info"></div>
          <div id="payment-token-id-info"></div>
        </div>
        <div id="saved-payment-methods-container"></div>
        <div class="separator"></div>
        <label for="toggle-shipping-info">Include Shipping Info?</label>
        <input type="checkbox" id="toggle-shipping-info" />
        <div class="shipping-info" style="display: none;">
          <h3>Shipping Info</h3>
          <label for="shipping-title">Title:</label>
          <input type="text" id="shipping-title" name="shipping-title" value="Mr." required />
          <label for="shipping-first-name">First Name:</label>
          <input type="text" id="shipping-first-name" name="shipping-first-name" value="John" required />
          <label for="shipping-last-name">Last Name:</label>
          <input type="text" id="shipping-last-name" name="shipping-last-name" value="Doe" required />
          <label for="shipping-email">Email Address:</label>
          <input type="email" id="shipping-email" name="shipping-email" value="john.doe@example.com" required />
          <label for="shipping-phone">Phone Number:</label>
          <input type="text" id="shipping-phone" name="shipping-phone" value="1234567890" required />
          <label for="shipping-address-line1">Address Line 1:</label>
          <input type="text" id="shipping-address-line1" name="shipping-address-line1" value="123 Main St" required />
          <label for="shipping-admin-area2">Admin Area 2:</label>
          <input type="text" id="shipping-admin-area2" name="shipping-admin-area2" value="Springfield" required />
          <label for="shipping-admin-area1">Admin Area 1:</label>
          <input type="text" id="shipping-admin-area1" name="shipping-admin-area1" value="IL" required />
          <label for="shipping-postal-code">Postal Code:</label>
          <input type="text" id="shipping-postal-code" name="shipping-postal-code" value="62701" required />
          <label for="shipping-country-code">Country Code:</label>
          <input type="text" id="shipping-country-code" name="shipping-country-code" value="US" required />
        </div>
        <div class="separator"></div>
        <div id="paypal-button-container" class="paypal-button-container"></div>
        <div class="or-text">or pay with card</div>
        <div class="separator"></div>
        <div class="card-fields">
          <div id="card-name-field-container"></div>
          <div id="card-number-field-container"></div>
          <div id="card-expiry-field-container"></div>
          <div id="card-cvv-field-container"></div>
          <button id="multi-card-field-button" type="button">Checkout with Card</button>
        </div>
      </section>
      <div id="paypal-buttons-container"></div>
    </div>
    <script>
      const clientId = '<%= clientId %>';
    </script>
    <script src="/mixed-checkout.js"></script>
  </body>
</html>