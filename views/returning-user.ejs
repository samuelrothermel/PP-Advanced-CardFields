<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/styles/custom.css" />
    <title>Returning User</title>
  </head>

  <body>
    <div class="container">
      <header>
        <h1>Returning User Login</h1>
      </header>
      <section class="returning-user">
        <form id="customer-id-form">
          <label for="customer-id">Enter Customer ID:</label>
          <input type="text" id="customer-id" name="customer-id" value="vLOMLitZuN" required />
          <button type="submit">Submit</button>
        </form>
      </section>
      <div id="paypal-buttons-container"></div>
    </div>

    <script src="/returning-user.js"></script>
    <script src="https://www.paypal.com/sdk/js?client-id=<%= clientId %>&merchant-id=MERCHANT-ID" data-user-id-token="<%= idToken %>"></script>
    <script>
      window.paypal.Buttons({
        createVaultSetupToken: async () => {
          const result = await fetch("/api/vault/setup-token", { method: "POST" });
          const data = await result.json();
          return data.token;
        },
        onApprove: async ({ vaultSetupToken }) => {
          return fetch("/api/payment-tokens", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ vaultSetupToken }),
          });
        },
        onError: (error) => {
          console.log("An error occurred: ", error);
        },
      }).render("#paypal-buttons-container");
    </script>
  </body>
</html>